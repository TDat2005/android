<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- ẢNH SẢN PHẨM -->
        <ImageView
            android:id="@+id/iv_product_image_detail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder"
            app:layout_constraintDimensionRatio="1:1.1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- TÊN -->
        <TextView
            android:id="@+id/tv_title_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="#2F2D2C"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_product_image_detail"
            tools:text="iPhone 15" />

        <!-- DANH MỤC -->
        <TextView
            android:id="@+id/tv_category_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#9B9B9B"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_detail"
            tools:text="Điện thoại" />

        <!-- NÚT THÊM GIỎ (bên phải) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_to_cart_detail"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:contentDescription="Thêm vào giỏ"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:backgroundTint="#C67C4E"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_add"
            app:iconSize="20dp"
            app:iconPadding="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_category_detail"
            app:layout_constraintBottom_toBottomOf="@id/tv_price_detail" />

        <!-- NÚT YÊU THÍCH (đứng trước nút giỏ) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_favorite_detail"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="Yêu thích"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:backgroundTint="@android:color/transparent"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_favorite_border"
            app:iconSize="20dp"
            app:iconPadding="0dp"
            app:layout_constraintEnd_toStartOf="@id/btn_add_to_cart_detail"
            app:layout_constraintTop_toTopOf="@id/btn_add_to_cart_detail"
            app:layout_constraintBottom_toBottomOf="@id/btn_add_to_cart_detail" />

        <!-- GIÁ (trái), giãn đến trước nút yêu thích -->
        <TextView
            android:id="@+id/tv_price_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="#C67C4E"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/btn_favorite_detail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_category_detail"
            tools:text="6.225.000 ₫" />

        <!-- MÔ TẢ -->
        <TextView
            android:id="@+id/tv_desc_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:lineSpacingExtra="2dp"
            android:textColor="#444444"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_price_detail"
            tools:text="Flagship 2024 với chip mạnh, màn hình đẹp…" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
